@page
@using RazorHotelDB.Models
@model RazorHotelDB.Pages.Rooms.CreateRoomModel
@{
    ViewData["Title"] = "Create Hotel";
}
<form method="post">
    <input type="hidden" asp-for="@Model.Room.HotelNr" />
    <div class="form-group">
        <label asp-for="@Model.Room.RoomNr" class="control-label"></label>
        <input asp-for="@Model.Room.RoomNr" class="form-control" />
        <span asp-validation-for="Room.RoomNr" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Room.Types" class="control-label"></label>
        <select asp-for="@Model.TheRoomType" asp-items="Html.GetEnumSelectList<RoomType>()" class="form-control">
        </select>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Room.Pris" class="control-label"></label>
        <input asp-for="@Model.Room.Pris class=" form-control" />
        <span asp-validation-for="Room.Pris" class=" text-danger"></span>
    </div>
    <div>
        <input type="submit" value="Create a room" asp-route-hotelnr="@Model.HotelNr" class="btn btn-primary" />
    </div>

</form>


<div>
    <a asp-page="Index">Back to List</a>
</div>
