@page
@using RazorHotelDB.Models
@model RazorHotelDB.Pages.Rooms.IndexModel
@{
    ViewData["Title"] = "Index of rooms";
}

<table class="table">
    <thead>
        <tr>
            <th>
                RoomNr
            </th>
            <th>
                Type
            </th>
            <th>
                Pris
            </th>
            <th>
                Hotel nr
            </th>
        </tr>
    </thead>
    <tbody>

        @if (Model.Rooms.Count() != 0)
        {
            @foreach (var item in Model.Rooms)
            {
                <tr>
                    <td>
                        @item.RoomNr
                    </td>
                    <td>
                        @item.Types
                    </td>
                    <td>
                        @item.Pris
                    </td>
                    <td>
                        @item.HotelNr
                    </td>


                    <td>
                        <a asp-page="UpdateRoom" asp-route-roomnr="@item.RoomNr" asp-route-hotelnr="@item.HotelNr">Update</a>|
                        <a asp-page="DeleteRoom" asp-route-roomnr="@item.RoomNr" asp-route-hotelnr="@item.HotelNr">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>