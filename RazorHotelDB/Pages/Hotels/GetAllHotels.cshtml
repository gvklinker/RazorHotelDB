@page
@model RazorHotelDB.Pages.Hotels.GetAllHotelsModel
@{
    ViewData["Title"] = "GetAllHotels";
}


<h4 style="color:aquamarine"> List of hotels</h4>
<p>
    <a asp-page="CreateHotel">Create a new Hotel</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Hotel No
            </th>
            <th>
                Name
            </th>
            <th>
                Address
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Hotels.Count() != 0)
        {
            @foreach (var item in Model.Hotels)
            {
                <tr>
                    <td>
                        @item.HotelNr
                    </td>
                    <td>
                        @item.Navn
                    </td>
                    <td>
                        @item.Adresse
                    </td>
                    <td>
                        <p>
                            <a asp-page="/Hotels/DeleteHotel" asp-route-hotelnr="@item.HotelNr">Delete</a>|
                            <a asp-page="/Hotels/UpdateHotel" asp-route-hotelnr="@item.HotelNr">Edit</a>|
                            <a asp-page="/Rooms/CreateRoom" asp-route-hotelnr="@item.HotelNr">Create new room</a>|
                            <a asp-page="/Rooms/Index" asp-route-hotelnr="@item.HotelNr">Rooms in hotel</a>
                        </p>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>