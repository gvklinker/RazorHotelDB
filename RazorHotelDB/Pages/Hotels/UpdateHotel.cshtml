@page
@model RazorHotelDB.Pages.Hotels.UpdateHotelModel
@{
    ViewData["Title"] = "Update Hotel";
}
<form method="post">
    <input type="hidden" asp-for="@Model.HotelToUpdate.HotelNr" />
    <div class="form-group">
        <label asp-for="HotelToUpdate.Navn" class="control-label"> </label>
        <input asp-for="HotelToUpdate.Navn" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="HotelToUpdate.Adresse" class="control-label"> </label>
        <input asp-for="HotelToUpdate.Adresse" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Update" asp-page-handler="Update" class="btn btn-primary" />
    </div>
</form>